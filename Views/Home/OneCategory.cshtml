@model Association

<h1>Category: @ViewBag.OneCategory.Name</h1>

<div class="row">
  <div class="col-6">
    <h3>Products Associated</h3>
    @foreach (Association c in ViewBag.OneCategory.ProductList)
    {
      <p>@c.Product.Name</p>
    }
  </div>
  <div class="col-6">
    <form action="/association/add" method="post">
      <input type="hidden" name="option" value="category">
      <input type="hidden" asp-for="CategoryId" value="@ViewBag.OneCategory.CategoryId">
      <div class="form-group">
        <label for="ProductId">Product Options</label>
        <select asp-for="ProductId" class="form-control">
          @* @foreach (Product m in @ViewBag.AllProducts)
            {
            <option value="@m.ProductId">@m.Name</option>
            } *@

          @foreach (Product x in @ViewBag.SomeProducts)
          {
            <option value="@x.ProductId">@x.Name</option>
          }
        </select>
      </div>
      <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary">
      </div>
    </form>
  </div>
</div>